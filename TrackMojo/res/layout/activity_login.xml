<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@android:color/white"
    android:id="@+id/scrollView" >
    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/thirtyfive_dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/thirtyfive_dp"
            android:src="@drawable/ic_login_logo" />

        <com.bluewavevision.tracmojo.customwidget.CustomEditText
            app:fontNameForEditText="Roboto-Regular.ttf"
            android:id="@+id/activity_login_etEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirtyfive_dp"
            android:layout_marginRight="@dimen/thirtyfive_dp"
            android:layout_marginTop="@dimen/tendp"
            android:background="@drawable/edit_box_background"
            android:textColor="@color/regular_text"
            android:drawablePadding="@dimen/tendp"
            android:drawableLeft="@drawable/ic_login_user"
            android:hint="@string/activity_login_email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/tendp"
            android:singleLine="true"
            android:textSize="@dimen/font_small" />

        <com.bluewavevision.tracmojo.customwidget.CustomEditText
            app:fontNameForEditText="Roboto-Regular.ttf"
            android:id="@+id/activity_login_etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirtyfive_dp"
            android:layout_marginRight="@dimen/thirtyfive_dp"
            android:layout_marginTop="@dimen/tendp"
            android:background="@drawable/edit_box_background"
            android:textColor="@color/regular_text"
            android:drawablePadding="@dimen/tendp"
            android:drawableLeft="@drawable/ic_user_password"
            android:hint="@string/activity_login_password"
            android:inputType="textPassword"
            android:padding="@dimen/tendp"
            android:singleLine="true"
            android:textSize="@dimen/font_small" />

        <com.bluewavevision.tracmojo.customwidget.CustomButton
            app:fontNameForButton="Roboto-Regular.ttf"
            android:id="@+id/activity_login_btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirtyfive_dp"
            android:layout_marginRight="@dimen/thirtyfive_dp"
            android:layout_marginTop="@dimen/twenty"
            android:background="@drawable/blue_button_selector"
            android:padding="@dimen/tendp"
            android:text="@string/activity_login_submit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium" />

        <com.bluewavevision.tracmojo.customwidget.CustomTextView
            app:fontName="Roboto-Regular.ttf"
            android:id="@+id/activity_login_tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fivedp"
            android:text="@string/activity_login_forgot_password"
            android:textColor="@color/regular_text"
            android:textSize="@dimen/font_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirtyfive_dp"
            android:layout_marginRight="@dimen/thirtyfive_dp"
            android:layout_marginTop="@dimen/twenty"
            android:gravity="center_vertical"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/twodp"
                android:layout_weight="0.45"
                android:background="@color/gray_or" />

            <com.bluewavevision.tracmojo.customwidget.CustomTextView
                app:fontName="Roboto-Regular.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:gravity="center"
                android:text="@string/activity_login_or"
                android:textColor="@color/or_text"
                android:textSize="@dimen/font_small" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/twodp"
                android:layout_weight="0.45"
                android:background="@color/gray_or" />

        </LinearLayout>

        <com.bluewavevision.tracmojo.customwidget.CustomButton
            app:fontNameForButton="Roboto-Regular.ttf"
            android:id="@+id/activity_login_btnCreateNewAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginTop="@dimen/twenty"
            android:background="@drawable/dark_blue_button_selector"
            android:padding="@dimen/tendp"
            android:textAllCaps="false"
            android:text="@string/activity_login_new_here"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirtyfive_dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:background="@drawable/facebook_circular_background"
                android:padding="@dimen/tendp"
                android:src="@drawable/ic_login_facebook"
                android:id="@+id/activity_login_ivFacebook" />
            <ImageView
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginLeft="@dimen/twenty"
                android:background="@drawable/google_circular_background"
                android:padding="@dimen/tendp"
                android:src="@drawable/ic_login_google"
                android:id="@+id/activity_login_ivGooglePlus" />
            <ImageView
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginLeft="@dimen/twenty"
                android:src="@drawable/ic_login_twitter"
                android:padding="@dimen/tendp"
                android:background="@drawable/twitter_circular_background"
                android:id="@+id/activity_login_ivTwitter" />
         </LinearLayout>

    </LinearLayout>
</ScrollView>