<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/custom_actionbar_ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/tendp"
        android:src="@drawable/ic_header_back"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/custom_actionbar_ivInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/tendp"
        android:src="@drawable/ic_home_info"
        android:visibility="invisible" />

    <!--
        <ImageView
        android:id="@+id/custom_actionbar_ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_header_logo"
        android:visibility="gone" />
    -->

    <com.bluewavevision.tracmojo.customwidget.CustomTextView
        android:id="@+id/custom_actionbar_tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="@color/blue_button_default_color"
        android:textSize="@dimen/font_medium"
        android:visibility="visible"
        app:fontName="Roboto-Bold.ttf" />

    <com.bluewavevision.tracmojo.customwidget.CustomTextView
        android:id="@+id/custom_actionbar_ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/blue_button_default_color"
        android:textSize="@dimen/font_large"
        android:visibility="visible"
        app:fontName="Roboto-Bold.ttf" />

    <com.bluewavevision.tracmojo.customwidget.CustomTextView
        android:id="@+id/custom_actionbar_tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/tendp"
        android:singleLine="true"
        android:text="@string/logout_title"
        android:textColor="@color/blue_button_default_color"
        android:textSize="@dimen/font_medium"
        android:visibility="gone"
        app:fontName="Roboto-Bold.ttf" />

    <ImageView
        android:id="@+id/custom_actionbar_ivHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/tendp"
        android:src="@drawable/ic_home_info"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/custom_actionbar_ivEmailCommentList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/tendp"
        android:src="@drawable/ic_email_comment"
        android:visibility="gone" />

</RelativeLayout>