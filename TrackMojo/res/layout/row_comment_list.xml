<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tendp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/row_comment_list_tvCommentedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/blue_button_default_color"
        android:textSize="@dimen/font_medium"
        android:text=""
        android:layout_toLeftOf="@+id/row_comment_list_tvTime"
        android:layout_toStartOf="@+id/row_comment_list_tvTime" />

    <TextView
        android:id="@+id/row_comment_list_tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ivTick"
        android:layout_below="@+id/row_comment_list_tvCommentedBy"
        android:textColor="@color/regular_text"
        android:textSize="@dimen/font_small"
        android:text="" />

    <TextView
        android:id="@+id/row_comment_list_tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/tendp"
        android:textColor="@color/regular_text"
        android:textSize="@dimen/font_small"
        android:text=""
         />

</RelativeLayout>
