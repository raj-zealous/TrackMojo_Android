<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/tab_back_color">

    <com.bluewavevision.tracmojo.customwidget.CustomTextView
        app:fontName="Roboto-Regular.ttf"
        android:id="@+id/row_home_list_header_tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_medium"
        android:paddingLeft="@dimen/tendp"
        android:background="@drawable/ic_home_list_header"
        android:gravity="center_vertical"
        android:textColor="@color/blue_button_default_color" />

    <ImageView
        android:id="@+id/row_home_list_header_tvPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/tendp"
        />

</RelativeLayout>