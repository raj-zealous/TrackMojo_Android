<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tendp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/row_service_list_tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/regular_text"
        android:layout_toLeftOf="@+id/ivTick"
        android:textSize="@dimen/font_medium"
        android:text="TextView" />

    <TextView
        android:id="@+id/row_service_list_tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ivTick"
        android:layout_below="@+id/row_service_list_tvName"
        android:textColor="@color/list_group_name"
        android:textSize="@dimen/font_small"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/tendp"
        android:src="@drawable/ic_blue_tick"
         />

</RelativeLayout>
