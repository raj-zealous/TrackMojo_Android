<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fifty_dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/custom_actionbar_ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/tendp"
            android:visibility="invisible"
            android:src="@drawable/ic_header_back" />

        <ImageView
            android:id="@+id/custom_actionbar_ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:src="@drawable/ic_header_logo" />

        <TextView
            android:id="@+id/custom_actionbar_tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:singleLine="true"
            android:textColor="@color/blue_button_default_color"
            android:textSize="@dimen/font_medium" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twodp"
            android:layout_alignParentBottom="true"
            android:background="@color/home_header_line">

         </View>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>