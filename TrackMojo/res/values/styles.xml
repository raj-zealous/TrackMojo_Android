<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar2" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="edit_text_style">
        <item name="android:padding">@dimen/tendp</item>
        <item name="android:textColor">@color/regular_text</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:drawablePadding">@dimen/tendp</item>
        <item name="android:background">@drawable/edit_box_background_solid</item>
    </style>

    <style name="edit_text_style_with_margins" parent="edit_text_style">
        <item name="android:layout_marginTop">@dimen/tendp</item>
        <item name="android:layout_marginLeft">@dimen/tendp</item>
        <item name="android:layout_marginRight">@dimen/tendp</item>
    </style>

    <style name="text_view_blue_style">
        <item name="android:drawablePadding">@dimen/tendp</item>
        <item name="android:textColor">@color/blue_button_default_color</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="text_view_blue_style_with_margins" parent="text_view_blue_style">
        <item name="android:layout_marginTop">@dimen/tendp</item>
        <item name="android:layout_marginLeft">@dimen/tendp</item>
        <item name="android:layout_marginRight">@dimen/tendp</item>
    </style>

    <style name="searchTextHiglight">
        <item name="android:textColor">@color/list_oval_shadow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="stockAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>